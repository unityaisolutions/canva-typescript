{
  "dxt_version": "0.2",
  "name": "canva-mcp",
  "version": "0.0.1",
  "description": "The official MCP Server for the Canva API",
  "author": {
    "name": "Canva"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unityaisolutions/canva-typescript.git"
  },
  "homepage": "https://github.com/unityaisolutions/canva-typescript/tree/main/packages/mcp-server#readme",
  "documentation": "https://community.canva.dev/",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "CANVA_USERNAME": "${user_config.CANVA_USERNAME}",
        "CANVA_PASSWORD": "${user_config.CANVA_PASSWORD}"
      }
    }
  },
  "user_config": {
    "CANVA_USERNAME": {
      "title": "username",
      "description": "",
      "required": false,
      "type": "string"
    },
    "CANVA_PASSWORD": {
      "title": "password",
      "description": "",
      "required": false,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
